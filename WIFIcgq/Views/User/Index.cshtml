<link rel="stylesheet" href="~/css/Login.css" type="text/css" />

@if (ViewData["Warning"] != null)
{
    <p class="text-center">@ViewBag.warning</p>
}
<div id="login">
    <form asp-controller="User" asp-action="Index" class="form-horizontal">
        <div class="row">
            <div class="col-md-12">
                <input name="UserName" type="text" class="form-control center-block" placeholder="用户名">
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <input name="PassWord" type="password" class="form-control center-block" placeholder="密码">
            </div>
        </div>
        <div class="input-group verigroup center-block">
            <input id="veritext" name="VeriCode" type="text" class="form-control" placeholder="验证码">
            <span id="imgVerify" class="input-group-addon" id="basic-addon2">
                <img src="/User/ValidateCode" alt="看不清？点击更换" style="vertical-align:middle;" />
            </span>    
        </div>
        <div class="col-md-12">
            <select name="type" class="form-control center-block">
                <option value="admin">管理员登录</option>
                <option value="user">普通用户登录</option>
            </select>
        </div>

        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="loginClass text-center">
                    <input class="btn btn-default" type="submit" value="登录" />
                </div>
            </div>
        </div>

    </form>
</div>


